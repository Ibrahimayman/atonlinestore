<% layout('../views/admin/layoutAdmin') %>

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-hover datatable">
                <thead>
                <tr>
                    <th>#</th>
                    <th>اسم العميل</th>
                    <th>سعر الفاتورة</th>
                    <th>التاريخ</th>
                    <th>نوع الطلب</th>
                    <th>رقم الهاتف</th>
                    <th>العمليات</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < bills.length ; i++) { %>
                <tr>
                    <td> <%= (i) + 1 %> </td>
                    <td> <%= bills[i].clientName %> </td>
                    <td> <%= bills[i].total %> </td>
                    <td> <%= moment(bills[i].Date).format("DD-MMM-YYYY") %> </td>
                    <td>
                        <% if(bills[i].orderType === "0") { %>
                        افلاين
                        <% } else{ %>
                        اون لاين
                        <% } %>
                    </td>
                    <td>
                        <% if( bills[i].number != undefined ) { %>
                        <%= bills[i].number %>
                        <% } %>
                    </td>
                    <td>
                        <a href="javascript:void(0)" title="تعديل فاتورة"><i class="fa fa-edit"></i></a>
                        <a href="javascript:void(0)"
                           ng-click="showRemoveModal('<%= bills[i]._id %>')"
                           title="حذف فاتورة">
                            <i class="fa fa-trash"></i></a>
                        <a href="javascript:void(0)" target="_blank" title=" مشاهدة منتجات الفاتورة "><i
                                    class="fa fa-eye"></i></a>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>